generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Url {
    id String @id @default(cuid())
    shortCode String @unique
    originalUrl String
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
    visits Int @default(0)
}